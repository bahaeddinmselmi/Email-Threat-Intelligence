{
  "manifest_version": 3,
  "name": "Email Threat Intelligence",
  "version": "1.0.0",
  "description": "Real-time email threat detection and analysis for Gmail and Outlook",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://outlook.office.com/*",
    "https://outlook.office365.com/*"
  ],
  "background": {
    "service_worker": "extension/background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": [
        "extension/utils/constants.js",
        "extension/utils/helpers.js",
        "extension/utils/validators.js",
        "extension/services/dns-service.js",
        "extension/services/threat-intel-service.js",
        "extension/services/analyzer-service.js",
        "extension/content/email-parser.js",
        "extension/content/ui-injector.js",
        "extension/content/gmail-content.js"
      ],
      "css": ["extension/ui/styles/banner.css", "extension/ui/styles/tooltip.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*"
      ],
      "js": [
        "extension/utils/constants.js",
        "extension/utils/helpers.js",
        "extension/utils/validators.js",
        "extension/services/dns-service.js",
        "extension/services/threat-intel-service.js",
        "extension/services/analyzer-service.js",
        "extension/content/email-parser.js",
        "extension/content/ui-injector.js",
        "extension/content/outlook-content.js"
      ],
      "css": ["extension/ui/styles/banner.css", "extension/ui/styles/tooltip.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "extension/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Email Threat Intelligence"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "extension/ui/styles/*.css",
        "icons/*.png"
      ],
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*"
      ]
    }
  ]
}
